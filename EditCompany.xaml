<Window x:Class="Test.EditCompany"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Test"
        mc:Ignorable="d"
        Title="EditCompany" Height="450" Width="800">
    <Grid >
        <Label Content="Id" Height="35" Width="80" VerticalAlignment="Top" HorizontalAlignment="Left"/>
        <TextBox x:Name="idTxtBox" Text="{Binding Id}" Margin="8,42,680,347"></TextBox>
        <Label Content="Company" Height="35" Width="80" VerticalAlignment="Top" HorizontalAlignment="Left" Margin="152,2,0,0"/>
        <TextBox x:Name="companyNameTxtBox" Text="{Binding CompanyName}" Margin="147,42,541,347"></TextBox>
         <Label Content="Is Main Company" Margin="304,5,366,383"  />
        <CheckBox x:Name="isMainCompanyCheckBox" Content="{Binding IsMainCompany}" Margin="337,51,406,350"/>
        <Button x:Name="saveButton" Content="Save" Click="Save_Click" Margin="65,372,656,16" />
    </Grid>
</Window>
