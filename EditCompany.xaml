        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Test"
        mc:Ignorable="d"
        Title="EditCompany" Height="450" Width="800">
    <Grid>
        <TextBox x:Name="companyNameTxtBox" Text="{Binding name}"></TextBox>
        <Button x:Name="saveButton" Content="Save" Click="Save_Click" Margin="65,372,656,16"/>
    </Grid>
</Window>
